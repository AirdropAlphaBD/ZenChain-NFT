    <script>
        // Wallet connection modal functionality
        const connectWalletBtn = document.getElementById('connectWalletBtn');
        const walletModal = document.getElementById('walletModal');
        const closeModal = document.getElementById('closeModal');
        const metamaskOption = document.getElementById('metamaskOption');
        const blockwalletOption = document.getElementById('blockwalletOption');
        
        // Create NFT modal functionality
        const createNftBtn = document.getElementById('createNftBtn');
        const createModal = document.getElementById('createModal');
        const nftForm = document.getElementById('nftForm');
        
        // Minting process modal
        const mintingModal = document.getElementById('mintingModal');
        
        // Success modal
        const successModal = document.getElementById('successModal');
        const viewInExploreBtn = document.getElementById('viewInExploreBtn');
        const createAnotherBtn = document.getElementById('createAnotherBtn');
        
        connectWalletBtn.addEventListener('click', () => {
            walletModal.style.display = 'flex';
        });
        
        closeModal.addEventListener('click', () => {
            walletModal.style.display = 'none';
        });
        
        metamaskOption.addEventListener('click', () => {
            alert('MetaMask connection functionality would be implemented here');
            // In a real dApp, this would connect to MetaMask
            walletModal.style.display = 'none';
            connectWalletBtn.textContent = 'Connected to MetaMask';
        });
        
        blockwalletOption.addEventListener('click', () => {
            alert('BlockWallet connection functionality would be implemented here');
            // In a real dApp, this would connect to BlockWallet
            walletModal.style.display = 'none';
            connectWalletBtn.textContent = 'Connected to BlockWallet';
        });
        
        // Create NFT button functionality
        createNftBtn.addEventListener('click', () => {
            createModal.style.display = 'flex';
        });
        
        // NFT form submission
        nftForm.addEventListener('submit', (e) => {
            e.preventDefault();
            createModal.style.display = 'none';
            mintingModal.style.display = 'flex';
            
            // Simulate minting process
            setTimeout(() => {
                mintingModal.style.display = 'none';
                successModal.style.display = 'flex';
            }, 3000);
        });
        
        // Success modal buttons
        viewInExploreBtn.addEventListener('click', () => {
            alert('This would open the blockchain explorer to view your transaction');
            successModal.style.display = 'none';
        });
        
        createAnotherBtn.addEventListener('click', () => {
            successModal.style.display = 'none';
            createModal.style.display = 'flex';
        });
        
        // Close modals if clicked outside of content
        window.addEventListener('click', (event) => {
            if (event.target === walletModal) {
                walletModal.style.display = 'none';
            }
            if (event.target === createModal) {
                createModal.style.display = 'none';
            }
            if (event.target === mintingModal) {
                mintingModal.style.display = 'none';
            }
            if (event.target === successModal) {
                successModal.style.display = 'none';
            }
        });
        
        // Filter buttons functionality
        const filterButtons = document.querySelectorAll('.filter-btn');
        
        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                
                // In a real application, this would filter the NFTs
                alert('Filtering would show ' + button.textContent + ' NFTs');
            });
        });
        
        // Mint button functionality
        const mintButtons = document.querySelectorAll('.mint-btn');
        
        mintButtons.forEach(button => {
            button.addEventListener('click', () => {
                const nftTitle = button.parentElement.querySelector('.nft-title').textContent;
                const nftPrice = button.parentElement.querySelector('.nft-price span').textContent;
                
                // Show minting process
                mintingModal.style.display = 'flex';
                
                // Simulate minting process
                setTimeout(() => {
                    mintingModal.style.display = 'none';
                    successModal.style.display = 'flex';
                    
                    // Update success message for minting
                    document.querySelector('.success-content h2').textContent = 'Minting Complete!';
                    document.querySelector('.success-content p').textContent = `You have successfully minted ${nftTitle} for ${nftPrice}.`;
                    
                }, 3000);
            });
        });
    </script>
</body>
